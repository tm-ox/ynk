---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";
import test from "../../content/images/YND01_01.jpg";

const events = await getCollection("events");
events.sort((b, a) => Date.parse(a.data.date) - Date.parse(b.data.date));
---

<BaseLayout>
  <section>
    <ul class="eventGrid">
      {
        events.map((event: any) => (
          <li>
            <a
              href={`/events/${event.slug}`}
              class="rounded-md"
              transition:name={event.data.title}
            >
              <h4>{event.data.title}</h4>
              <Image
                src={event.data.images[0].src}
                alt={event.data.images[0].alt}
              />
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
