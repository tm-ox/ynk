---
import { getCollection } from "astro:content";
import { Image } from "astro:assets";
import BaseLayout from "../../layouts/BaseLayout.astro";
import test from "../../content/images/YND01_01.jpg";

const events = await getCollection("events");
events.sort((b, a) => Date.parse(a.data.date) - Date.parse(b.data.date));
---

<BaseLayout>
  <section
    class="flex min-h-screen items-center justify-center max-w-[98%] mx-auto"
  >
    <ul class="grid grid-cols-6 gap-3">
      {
        events.map((page: any) => (
          <li>
            <a href={`/events/${page.slug}`} class="rounded-md">
              <Image
                src={page.data.images[0].src}
                alt={page.data.images[0].alt}
                class="rounded-md bg-secondary"
                transition:name={page.data.title}
              />
            </a>
          </li>
        ))
      }
    </ul>
  </section>
</BaseLayout>
